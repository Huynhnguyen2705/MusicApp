<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_weight="1">
    <ImageView
        android:id="@+id/imageTrack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_weight="3.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTrack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3.2"
            android:gravity="center_vertical"
            android:text="Look what you make me do"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/artistTrack"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="top"
            android:text="Taylor Swift" />
    </LinearLayout>


    <com.taishi.library.Indicator
        android:id="@+id/indicator"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/marginbase"
        android:layout_weight="0.4"
        android:background="#FAFAFA"
        app:bar_color="@color/icon_anim_"
        app:bar_num="50"
        app:duration="20000"
        app:step_num="40" />

</LinearLayout>
